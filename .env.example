# Конфигурация базы данных
DATABASE_URL=sqlite:///order_assistant.db

# Секретный ключ Flask
SECRET_KEY=dev-secret-key-change-me-in-production

# Режим разработки
FLASK_ENV=development
FLASK_DEBUG=1

# ============================================
# Настройки Yandex SpeechKit TTS
# ============================================
# Для использования Yandex SpeechKit:
# 1. Зарегистрируйтесь на https://cloud.yandex.ru/
# 2. Создайте сервисный аккаунт
# 3. Назначьте роль editor или admin
# 4. Создайте API ключ для сервисного аккаунта
# 5. Получите Folder ID из консоли Yandex Cloud
#
# Включить Yandex TTS (true/false):
YANDEX_TTS_ENABLED=false

# API ключ Yandex Cloud (получить в консоли: IAM -> Сервисные аккаунты -> API ключи)
YANDEX_TTS_API_KEY=

# Folder ID (ID каталога в Yandex Cloud, найти в настройках каталога)
YANDEX_TTS_FOLDER_ID=

# Голос для синтеза (jane, oksana, omazh, zahar, ermil)
# jane - женский, oksana - женский, omazh - женский
# zahar - мужской, ermil - мужской
YANDEX_TTS_VOICE=jane

# Если YANDEX_TTS_ENABLED=false, будет использоваться Google TTS (gTTS)